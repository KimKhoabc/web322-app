<div class="row">
    <div class="col-md-12">
        <h2>Categories</h2>
        <a href="/categories/add" class="btn btn-success pull-right">Add Category</a>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Category ID</th>
                        <th>Category Name</th>
                        <th></th> <!-- Empty column header for the remove button -->
                    </tr>
                </thead>
                <tbody>
                    {{#each categories}}
                        <tr>
                            <td><a href="/items?category={{id}}">{{id}}</a></td>
                            <td><a href="/items?category={{id}}">{{category}}</a></td>
                            <td>
                                <!-- Remove button for each category -->
                                <a href="/categories/delete/{{id}}" class="btn btn-danger">Remove</a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{#unless categories.length}}
            <!-- If no categories are available, show this message -->
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
        {{/unless}}
    </div>
</div>
